---
import Card from './ui/Card.astro';
import SectionHeading from './ui/SectionHeading.astro';

export interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const trustFeatures = [
  {
    icon: 'M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
    titleKey: 'trust.local.title',
    descKey: 'trust.local.desc',
  },
  {
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
    titleKey: 'trust.privacy.title',
    descKey: 'trust.privacy.desc',
  },
  {
    icon: 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z',
    titleKey: 'trust.secure.title',
    descKey: 'trust.secure.desc',
  },
];
---

<section id="about" class="py-20 md:py-32 relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(0,255,194,0.08),transparent_50%)]"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <SectionHeading 
      title={t('trust.title')}
      subtitle={t('trust.subtitle')}
      centered={true}
      class="mb-16"
    />

    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {trustFeatures.map((feature) => (
        <Card variant="default" class="group hover:border-color-secondary transition-all duration-300 glass-effect hover:shadow-xl hover:-translate-y-1">
          <div class="mb-4">
            <div class="w-14 h-14 bg-gradient-to-br from-color-secondary/20 to-color-accent/20 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-gradient" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon} />
              </svg>
            </div>
          </div>
          <h3 class="text-xl font-bold text-text-heading mb-3">
            {t(feature.titleKey)}
          </h3>
          <p class="text-text-body leading-relaxed">
            {t(feature.descKey)}
          </p>
        </Card>
      ))}
    </div>
  </div>
</section>
