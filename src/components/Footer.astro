---
export interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { key: 'footer.features', href: '#features' },
    { key: 'footer.pricing', href: '#pricing' },
  ],
  company: [
    { key: 'footer.about', href: '#about' },
    { key: 'footer.contact', href: '#demo' },
  ],
  legal: [
    { key: 'footer.privacy', href: '#' },
    { key: 'footer.terms', href: '#' },
  ],
};
---

<footer class="bg-bg-dark text-white py-16">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-4 gap-8 mb-12">
      <!-- Brand Column -->
      <div class="md:col-span-1">
        <a href="/" class="flex items-center gap-2 mb-4 group">
          <svg class="w-8 h-8 transition-transform group-hover:scale-110" viewBox="0 0 120 120" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <defs>
              <filter id="glowIndigoF" x="-50%" y="-50%" width="200%" height="200%">
                <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
                <feMerge>
                  <feMergeNode in="coloredBlur"/>
                  <feMergeNode in="SourceGraphic"/>
                </feMerge>
              </filter>
              <filter id="glowCyanF" x="-50%" y="-50%" width="200%" height="200%">
                <feGaussianBlur stdDeviation="2.5" result="coloredBlur"/>
                <feMerge>
                  <feMergeNode in="coloredBlur"/>
                  <feMergeNode in="SourceGraphic"/>
                </feMerge>
              </filter>
              <radialGradient id="indigoGradF" cx="50%" cy="50%">
                <stop offset="0%" style="stop-color:#7B7BFF;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#5D5DFF;stop-opacity:0.8" />
              </radialGradient>
              <radialGradient id="cyanGradF" cx="50%" cy="50%">
                <stop offset="0%" style="stop-color:#00FFDB;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#00FFC2;stop-opacity:0.7" />
              </radialGradient>
            </defs>
            
            <!-- Hexagons with fill and glow -->
            <g filter="url(#glowIndigoF)">
              <path d="M60 8 L68 13 L68 23 L60 28 L52 23 L52 13 Z" fill="url(#indigoGradF)" opacity="0.85"/>
            </g>
            <g filter="url(#glowCyanF)">
              <path d="M86 28 L94 33 L94 43 L86 48 L78 43 L78 33 Z" fill="url(#cyanGradF)" opacity="0.75"/>
            </g>
            <g filter="url(#glowCyanF)">
              <path d="M86 72 L94 77 L94 87 L86 92 L78 87 L78 77 Z" fill="url(#cyanGradF)" opacity="0.75"/>
            </g>
            <g filter="url(#glowIndigoF)">
              <path d="M60 92 L68 97 L68 107 L60 112 L52 107 L52 97 Z" fill="url(#indigoGradF)" opacity="0.85"/>
            </g>
            <g filter="url(#glowIndigoF)">
              <path d="M34 72 L42 77 L42 87 L34 92 L26 87 L26 77 Z" fill="url(#indigoGradF)" opacity="0.85"/>
            </g>
            <g filter="url(#glowCyanF)">
              <path d="M34 28 L42 33 L42 43 L34 48 L26 43 L26 33 Z" fill="url(#cyanGradF)" opacity="0.75"/>
            </g>
            
            <!-- Connection lines -->
            <line x1="60" y1="28" x2="60" y2="40" stroke="#5D5DFF" stroke-width="1.5" stroke-dasharray="2,3" opacity="0.6"/>
            <line x1="78" y1="43" x2="68" y2="50" stroke="#00FFC2" stroke-width="1.5" stroke-dasharray="2,3" opacity="0.5"/>
            <line x1="78" y1="77" x2="68" y2="70" stroke="#00FFC2" stroke-width="1.5" stroke-dasharray="2,3" opacity="0.5"/>
            <line x1="60" y1="92" x2="60" y2="80" stroke="#5D5DFF" stroke-width="1.5" stroke-dasharray="2,3" opacity="0.6"/>
            <line x1="42" y1="77" x2="52" y2="70" stroke="#5D5DFF" stroke-width="1.5" stroke-dasharray="2,3" opacity="0.6"/>
            <line x1="42" y1="43" x2="52" y2="50" stroke="#00FFC2" stroke-width="1.5" stroke-dasharray="2,3" opacity="0.5"/>
            
            <!-- Central white circle -->
            <circle cx="60" cy="60" r="18" fill="#F2F2F2" opacity="0.98"/>
            <circle cx="60" cy="60" r="18" fill="none" stroke="#FFFFFF" stroke-width="2" opacity="0.5"/>
            
            <!-- Inner ring -->
            <circle cx="60" cy="60" r="22" fill="none" stroke="#5D5DFF" stroke-width="1.5" opacity="0.3"/>
            
            <!-- Connection nodes -->
            <circle cx="60" cy="8" r="2.5" fill="#5D5DFF" filter="url(#glowIndigoF)"/>
            <circle cx="86" cy="28" r="2.5" fill="#00FFC2" filter="url(#glowCyanF)"/>
            <circle cx="86" cy="92" r="2.5" fill="#00FFC2" filter="url(#glowCyanF)"/>
            <circle cx="60" cy="112" r="2.5" fill="#5D5DFF" filter="url(#glowIndigoF)"/>
            <circle cx="34" cy="92" r="2.5" fill="#5D5DFF" filter="url(#glowIndigoF)"/>
            <circle cx="34" cy="28" r="2.5" fill="#00FFC2" filter="url(#glowCyanF)"/>
          </svg>
          <span class="text-xl font-bold text-color-accent" style="letter-spacing: 0.05em;">NYXOK</span>
        </a>
        <p class="text-gray-400 text-sm mb-4">
          {t('footer.tagline')}
        </p>
        <div class="flex gap-4">
          <a href="#" class="text-color-text-muted hover:text-color-secondary transition-colors focus-visible:outline-2 focus-visible:outline-brand-accent rounded" aria-label="Facebook">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" class="text-color-text-muted hover:text-color-secondary transition-colors focus-visible:outline-2 focus-visible:outline-brand-accent rounded" aria-label="Twitter">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
          <a href="#" class="text-color-text-muted hover:text-color-secondary transition-colors focus-visible:outline-2 focus-visible:outline-brand-accent rounded" aria-label="LinkedIn">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Product Links -->
      <div>
        <h4 class="font-semibold mb-4">{t('footer.product')}</h4>
        <ul class="space-y-2">
          {footerLinks.product.map((link) => (
            <li>
              <a href={link.href} class="text-color-text-body hover:text-color-secondary transition-colors text-sm focus-visible:outline-2 focus-visible:outline-brand-accent rounded">
                {t(link.key)}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="font-semibold mb-4">{t('footer.company')}</h4>
        <ul class="space-y-2">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-color-text-body hover:text-color-secondary transition-colors text-sm focus-visible:outline-2 focus-visible:outline-brand-accent rounded">
                {t(link.key)}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h4 class="font-semibold mb-4">{t('footer.legal')}</h4>
        <ul class="space-y-2">
          {footerLinks.legal.map((link) => (
            <li>
              <a href={link.href} class="text-color-text-body hover:text-color-secondary transition-colors text-sm focus-visible:outline-2 focus-visible:outline-brand-accent rounded">
                {t(link.key)}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 pt-8 text-center">
      <p class="text-gray-400 text-sm">
        Â© {currentYear} Nyxok. {t('footer.rights')}
      </p>
    </div>
  </div>
</footer>
