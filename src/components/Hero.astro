---
import Button from './ui/Button.astro';

export interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<section class="relative pt-20 pb-12 sm:pt-24 sm:pb-16 md:pt-32 md:pb-20 lg:pt-40 lg:pb-24 overflow-hidden min-h-[100svh] flex items-center">
  <!-- Futuristic Tech Background - Inspired by digital globe cityscape -->
  <div class="absolute inset-0 bg-gradient-to-b from-[#0a0e1a] via-[#0d1428] to-[#1a1a2e]"></div>
  
  <!-- Animated Grid Pattern -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0" style="background-image: linear-gradient(rgba(93, 93, 255, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(93, 93, 255, 0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
  </div>
  
  <!-- Digital Globe Effect - Right Side -->
  <div class="absolute right-0 top-1/2 -translate-y-1/2 w-[400px] h-[400px] md:w-[600px] md:h-[600px] lg:w-[800px] lg:h-[800px] opacity-40">
    <div class="absolute inset-0 rounded-full bg-gradient-to-br from-cyan-400/30 via-blue-500/20 to-transparent blur-3xl animate-pulse-slow"></div>
    <div class="absolute inset-0 rounded-full border border-cyan-400/20 animate-spin-slow"></div>
    <div class="absolute inset-8 rounded-full border border-cyan-400/10 animate-spin-slow" style="animation-duration: 20s; animation-direction: reverse;"></div>
  </div>
  
  <!-- Network Connections -->
  <div class="absolute inset-0 overflow-hidden opacity-30">
    <svg class="absolute top-1/4 right-1/4 w-64 h-64" viewBox="0 0 200 200">
      <line x1="20" y1="20" x2="180" y2="180" stroke="url(#lineGradient1)" stroke-width="1" class="animate-dash" />
      <line x1="180" y1="20" x2="20" y2="180" stroke="url(#lineGradient2)" stroke-width="1" class="animate-dash" style="animation-delay: 0.5s;" />
      <defs>
        <linearGradient id="lineGradient1" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#00FFC2;stop-opacity:0" />
          <stop offset="50%" style="stop-color:#00FFC2;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#00FFC2;stop-opacity:0" />
        </linearGradient>
        <linearGradient id="lineGradient2" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#5D5DFF;stop-opacity:0" />
          <stop offset="50%" style="stop-color:#5D5DFF;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#5D5DFF;stop-opacity:0" />
        </linearGradient>
      </defs>
    </svg>
  </div>
  
  <!-- Floating Particles -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
    <div class="particle particle-4"></div>
    <div class="particle particle-5"></div>
  </div>
  
  <!-- Gradient Overlays -->
  <div class="absolute inset-0" style="background: radial-gradient(circle at center, transparent 0%, transparent 50%, rgba(10, 14, 26, 0.8) 100%);"></div>
  <div class="absolute bottom-0 left-0 right-0 h-64 bg-gradient-to-t from-[#0a0e1a] to-transparent"></div>
  
  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <div class="max-w-6xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
        <!-- Left Content -->
        <div class="text-left space-y-4 sm:space-y-6 md:space-y-8">
          <!-- Badge with Glass Morphism -->
          <div class="animate-fade-in">
            <span class="inline-flex items-center gap-2 px-3 py-1.5 sm:px-4 sm:py-2 rounded-full text-xs font-semibold text-cyan-400 bg-cyan-400/10 backdrop-blur-md border border-cyan-400/20">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-cyan-400"></span>
              </span>
              {t('hero.social')}
            </span>
          </div>
          
          <!-- Main Heading with Gradient -->
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold leading-tight animate-fade-in-up">
            <span class="block bg-gradient-to-r from-white via-cyan-100 to-white bg-clip-text text-transparent">
              {t('hero.title')}
            </span>
          </h1>
          
          <!-- Tagline with Glow -->
          <p class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-semibold animate-fade-in-up text-cyan-400" style="animation-delay: 0.1s; text-shadow: 0 0 30px rgba(0, 255, 194, 0.3);">
            {t('hero.tagline')}
          </p>
          
          <!-- Subtitle -->
          <p class="text-sm sm:text-base md:text-lg lg:text-xl text-gray-300 leading-relaxed animate-fade-in-up max-w-2xl" style="animation-delay: 0.2s">
            {t('hero.subtitle')}
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 animate-fade-in-up" style="animation-delay: 0.3s">
            <Button variant="primary" size="lg" href="#demo" ariaLabel={t('hero.cta')}>
              {t('hero.cta')}
              <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </Button>
            <Button variant="ghost" size="lg" href="#how-it-works" ariaLabel={t('hero.demo')}>
              {t('hero.demo')}
            </Button>
          </div>
        </div>
        <!-- Right Content - Tech Visualization -->
        <div class="relative hidden lg:block animate-fade-in-up" style="animation-delay: 0.4s">
          <div class="relative aspect-square max-w-md lg:max-w-lg xl:max-w-xl mx-auto">
            <!-- Central Orb -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="relative w-32 h-32 sm:w-40 sm:h-40 lg:w-48 lg:h-48">
                <div class="absolute inset-0 rounded-full bg-gradient-to-br from-cyan-400 to-blue-600 opacity-80 animate-pulse-glow"></div>
                <div class="absolute inset-2 rounded-full bg-gradient-to-br from-cyan-300 to-blue-500 opacity-60 blur-xl"></div>
                <div class="absolute inset-0 rounded-full border-2 border-cyan-400/30 animate-spin-slow"></div>
                <div class="absolute inset-4 rounded-full border border-cyan-400/20 animate-spin-slow" style="animation-duration: 15s; animation-direction: reverse;"></div>
              </div>
            </div>
            
            <!-- Orbiting Services -->
            <div class="absolute inset-0">
              <!-- Backend -->
              <div class="tech-service tech-service-1">
                <div class="service-icon">
                  <svg class="w-5 h-5 lg:w-6 lg:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
                  </svg>
                </div>
              </div>
              
              <!-- Frontend -->
              <div class="tech-service tech-service-2">
                <div class="service-icon">
                  <svg class="w-5 h-5 lg:w-6 lg:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                </div>
              </div>
              
              <!-- Automation -->
              <div class="tech-service tech-service-3">
                <div class="service-icon">
                  <svg class="w-5 h-5 lg:w-6 lg:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
              </div>
              
              <!-- AI -->
              <div class="tech-service tech-service-4">
                <div class="service-icon">
                  <svg class="w-5 h-5 lg:w-6 lg:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                </div>
              </div>
              
              <!-- Connection Lines -->
              <svg class="absolute inset-0 w-full h-full" viewBox="0 0 400 400">
                <line x1="200" y1="200" x2="200" y2="50" stroke="url(#techGrad)" stroke-width="1" opacity="0.3" class="animate-dash" />
                <line x1="200" y1="200" x2="350" y2="150" stroke="url(#techGrad2)" stroke-width="1" opacity="0.3" class="animate-dash" style="animation-delay: 0.5s;" />
                <line x1="200" y1="200" x2="350" y2="250" stroke="url(#techGrad)" stroke-width="1" opacity="0.3" class="animate-dash" style="animation-delay: 1s;" />
                <line x1="200" y1="200" x2="200" y2="350" stroke="url(#techGrad2)" stroke-width="1" opacity="0.3" class="animate-dash" style="animation-delay: 1.5s;" />
                <defs>
                  <linearGradient id="techGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#00FFC2;stop-opacity:0" />
                    <stop offset="50%" style="stop-color:#00FFC2;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#00FFC2;stop-opacity:0" />
                  </linearGradient>
                  <linearGradient id="techGrad2" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#5D5DFF;stop-opacity:0" />
                    <stop offset="50%" style="stop-color:#5D5DFF;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#5D5DFF;stop-opacity:0" />
                  </linearGradient>
                </defs>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Wave Separator -->
  <div class="absolute bottom-0 left-0 right-0 z-20" aria-hidden="true">
    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" class="w-full h-auto">
      <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0V120Z" fill="var(--bg-surface)"/>
    </svg>
  </div>
</section>

<style>
  /* Modern Animations */
  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse-slow {
    0%, 100% { 
      opacity: 0.3;
      transform: scale(1);
    }
    50% { 
      opacity: 0.6;
      transform: scale(1.05);
    }
  }
  
  @keyframes pulse-glow {
    0%, 100% {
      opacity: 0.8;
      filter: blur(0px);
    }
    50% {
      opacity: 1;
      filter: blur(4px);
    }
  }
  
  @keyframes spin-slow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @keyframes dash {
    to {
      stroke-dashoffset: -40;
    }
  }

  @keyframes orbit {
    from { transform: rotate(0deg) translateX(180px) rotate(0deg); }
    to { transform: rotate(360deg) translateX(180px) rotate(-360deg); }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  /* Utility Classes */
  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out backwards;
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }
  
  .animate-pulse-glow {
    animation: pulse-glow 3s ease-in-out infinite;
  }
  
  .animate-spin-slow {
    animation: spin-slow 30s linear infinite;
  }
  
  .animate-dash {
    stroke-dasharray: 10, 10;
    animation: dash 3s linear infinite;
  }

  /* Tech Services */
  .tech-service {
    position: absolute;
    top: 50%;
    left: 50%;
    animation: orbit 20s linear infinite;
  }

  .tech-service-1 { animation-delay: 0s; }
  .tech-service-2 { animation-delay: -5s; }
  .tech-service-3 { animation-delay: -10s; }
  .tech-service-4 { animation-delay: -15s; }

  .service-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(0, 255, 194, 0.2), rgba(93, 93, 255, 0.2));
    backdrop-filter: blur(10px);
    border: 1px solid rgba(0, 255, 194, 0.3);
    border-radius: 12px;
    color: #00FFC2;
    transform: translateX(-24px) translateY(-24px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(0, 255, 194, 0.2);
  }

  @media (min-width: 1024px) {
    .service-icon {
      width: 56px;
      height: 56px;
      transform: translateX(-28px) translateY(-28px);
    }
  }

  .service-icon:hover {
    transform: translateX(-24px) translateY(-24px) scale(1.1);
    box-shadow: 0 6px 25px rgba(0, 255, 194, 0.3);
    background: linear-gradient(135deg, rgba(0, 255, 194, 0.3), rgba(93, 93, 255, 0.3));
  }

  @media (min-width: 1024px) {
    .service-icon:hover {
      transform: translateX(-28px) translateY(-28px) scale(1.1);
    }
  }

  /* Floating Particles */
  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: linear-gradient(135deg, #00FFC2, #5D5DFF);
    border-radius: 50%;
    opacity: 0.6;
    animation: float 6s ease-in-out infinite;
    box-shadow: 0 0 10px currentColor;
  }

  @media (max-width: 640px) {
    .particle {
      width: 3px;
      height: 3px;
    }
  }

  .particle-1 {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
    animation-duration: 8s;
  }

  .particle-2 {
    top: 60%;
    left: 20%;
    animation-delay: 2s;
    animation-duration: 6s;
  }

  .particle-3 {
    top: 40%;
    right: 15%;
    animation-delay: 1s;
    animation-duration: 7s;
  }

  .particle-4 {
    top: 80%;
    right: 25%;
    animation-delay: 3s;
    animation-duration: 9s;
  }

  .particle-5 {
    top: 30%;
    left: 50%;
    animation-delay: 1.5s;
    animation-duration: 7.5s;
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .tech-service {
      animation: orbit 20s linear infinite;
      transform-origin: 150px center;
    }
  }

  @media (max-width: 640px) {
    .particle {
      width: 3px;
      height: 3px;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in,
    .animate-fade-in-up,
    .animate-pulse-slow,
    .animate-pulse-glow,
    .animate-spin-slow,
    .animate-dash,
    .tech-service,
    .particle {
      animation: none;
    }
  }
</style>
