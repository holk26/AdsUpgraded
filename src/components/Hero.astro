---
import Button from './ui/Button.astro';

export interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<section id="hero" class="relative pt-20 pb-12 sm:pt-24 sm:pb-16 md:pt-28 md:pb-16 lg:pt-32 lg:pb-20 min-h-[100svh] flex items-center overflow-hidden">
  <!-- Background decorations container - contains overflow -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Clean Professional Background -->
    <div class="absolute inset-0 bg-gradient-to-b from-[#0a0e1a] via-[#0d1428] to-[#1a1a2e]"></div>
    
    <!-- Subtle Grid Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 hero-grid-pattern"></div>
    </div>
    
    <!-- Elegant Glow Effect - Centered -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] h-[400px] md:w-[600px] md:h-[600px] opacity-20">
      <div class="absolute inset-0 rounded-full bg-gradient-to-br from-cyan-400/30 via-blue-500/20 to-transparent blur-3xl"></div>
    </div>
    
    <!-- Gradient Overlays -->
    <div class="absolute bottom-0 left-0 right-0 h-48 md:h-64 bg-gradient-to-t from-[#0a0e1a] to-transparent"></div>
  </div>
  
  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-col items-center justify-center">
        <!-- Centered Content -->
        <div class="text-center space-y-3 sm:space-y-4 md:space-y-6 w-full">
          <!-- Badge with Glass Morphism -->
          <div class="animate-fade-in">
            <span class="inline-flex items-center gap-2 px-3 py-1.5 sm:px-4 sm:py-2 rounded-full text-xs sm:text-sm font-semibold text-cyan-400 bg-cyan-400/10 backdrop-blur-md border border-cyan-400/20">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-cyan-400"></span>
              </span>
              {t('hero.social')}
            </span>
          </div>
          
          <!-- Main Heading with Gradient -->
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-5xl xl:text-6xl font-bold leading-tight animate-fade-in-up">
            <span class="block bg-gradient-to-r from-white via-cyan-100 to-white bg-clip-text text-transparent">
              {t('hero.title')}
            </span>
          </h1>
          
          <!-- Tagline with Glow -->
          <p class="text-base sm:text-lg md:text-xl lg:text-2xl font-semibold animate-fade-in-up [animation-delay:0.1s] text-cyan-400 hero-glow-text">
            {t('hero.tagline')}
          </p>
          
          <!-- Subtitle -->
          <p class="text-sm sm:text-base md:text-lg text-gray-300 leading-relaxed animate-fade-in-up [animation-delay:0.2s] max-w-2xl">
            {t('hero.subtitle')}
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 pt-2 animate-fade-in-up [animation-delay:0.3s] justify-center">
            <Button variant="primary" size="lg" href="#demo" ariaLabel={t('hero.cta')}>
              {t('hero.cta')}
              <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </Button>
            <Button variant="ghost" size="lg" href="#how-it-works" ariaLabel={t('hero.demo')}>
              {t('hero.demo')}
            </Button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Wave Separator -->
  <div class="absolute bottom-0 left-0 right-0 z-section" aria-hidden="true">
    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" class="w-full h-auto">
      <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0V120Z" fill="var(--bg-surface)"/>
    </svg>
  </div>
</section>

<style>
  /* Hero-specific utility classes */
  .hero-grid-pattern {
    background-image: linear-gradient(rgba(93, 93, 255, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(93, 93, 255, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
  }
  
  .hero-glow-text {
    text-shadow: 0 0 30px rgba(0, 255, 194, 0.3);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in,
    .animate-fade-in-up {
      animation: none;
    }
  }
</style>
