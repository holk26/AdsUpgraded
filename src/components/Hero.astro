---
import Button from './ui/Button.astro';

export interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<section class="relative pt-32 pb-20 md:pt-40 md:pb-32 overflow-hidden">
  <!-- Gradient mesh background -->
  <div class="absolute inset-0 bg-gradient-to-br from-color-accent/10 via-transparent to-color-secondary/10"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(93,93,255,0.15),transparent_50%)]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(0,255,194,0.1),transparent_50%)]"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Badge -->
      <div class="mb-6 animate-fade-in">
        <span class="inline-block px-6 py-2 glass-effect rounded-full text-sm font-semibold text-color-secondary border border-color-secondary/30">
          {t('hero.social')}
        </span>
      </div>
      
      <!-- Main Heading -->
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold mb-6 leading-tight animate-fade-in-up px-2">
        {t('hero.title')}
      </h1>
      
      <!-- Tagline -->
      <p class="text-lg sm:text-xl md:text-2xl text-color-secondary font-semibold mb-4 animate-fade-in-up" style="animation-delay: 0.1s">
        {t('hero.tagline')}
      </p>
      
      <!-- Subtitle -->
      <p class="text-base sm:text-lg md:text-xl text-text-body mb-10 max-w-3xl mx-auto leading-relaxed animate-fade-in-up opacity-90 px-4" style="animation-delay: 0.2s">
        {t('hero.subtitle')}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center mb-16 animate-fade-in-up px-4 max-w-lg mx-auto" style="animation-delay: 0.3s">
        <Button variant="primary" size="lg" href="#demo" ariaLabel={t('hero.cta')}>
          {t('hero.cta')}
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </Button>
        <Button variant="ghost" size="lg" href="#how-it-works" ariaLabel={t('hero.demo')}>
          {t('hero.demo')}
        </Button>
      </div>

      <!-- Interactive Hexagonal Logo Network -->
      <div class="relative mx-auto max-w-6xl animate-fade-in-up px-4" style="animation-delay: 0.4s">
        <div id="hexagon-network" class="relative py-12 sm:py-20 md:py-32">
          <!-- SVG Container -->
          <svg class="w-full h-auto" viewBox="0 0 1000 800" fill="none" xmlns="http://www.w3.org/2000/svg" aria-labelledby="network-title" preserveAspectRatio="xMidYMid meet">
            <title id="network-title">Nyxok Services Network</title>
            <defs>
              <!-- Glow Filters -->
              <filter id="glowMain" x="-50%" y="-50%" width="200%" height="200%">
                <feGaussianBlur stdDeviation="4" result="coloredBlur"/>
                <feMerge>
                  <feMergeNode in="coloredBlur"/>
                  <feMergeNode in="SourceGraphic"/>
                </feMerge>
              </filter>
              <filter id="glowService" x="-50%" y="-50%" width="200%" height="200%">
                <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
                <feMerge>
                  <feMergeNode in="coloredBlur"/>
                  <feMergeNode in="SourceGraphic"/>
                </feMerge>
              </filter>
              
              <!-- Gradients -->
              <radialGradient id="mainGrad" cx="50%" cy="50%">
                <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#F2F2F2;stop-opacity:0.9" />
              </radialGradient>
              <radialGradient id="indigoGradHero" cx="50%" cy="50%">
                <stop offset="0%" style="stop-color:#7B7BFF;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#5D5DFF;stop-opacity:0.8" />
              </radialGradient>
              <radialGradient id="cyanGradHero" cx="50%" cy="50%">
                <stop offset="0%" style="stop-color:#00FFDB;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#00FFC2;stop-opacity:0.7" />
              </radialGradient>
            </defs>
            
            <!-- Connection Lines (animated) -->
            <g class="connections" opacity="0.6">
              <line class="connection-line" x1="500" y1="400" x2="500" y2="180" stroke="#5D5DFF" stroke-width="2" stroke-dasharray="5,5"/>
              <line class="connection-line" x1="500" y1="400" x2="690" y2="290" stroke="#00FFC2" stroke-width="2" stroke-dasharray="5,5"/>
              <line class="connection-line" x1="500" y1="400" x2="690" y2="510" stroke="#5D5DFF" stroke-width="2" stroke-dasharray="5,5"/>
              <line class="connection-line" x1="500" y1="400" x2="500" y2="620" stroke="#00FFC2" stroke-width="2" stroke-dasharray="5,5"/>
              <line class="connection-line" x1="500" y1="400" x2="310" y2="510" stroke="#5D5DFF" stroke-width="2" stroke-dasharray="5,5"/>
              <line class="connection-line" x1="500" y1="400" x2="310" y2="290" stroke="#00FFC2" stroke-width="2" stroke-dasharray="5,5"/>
            </g>
            
            <!-- Service Hexagons (6 services around the center) -->
            <!-- Backend (Top) -->
            <g class="service-hex" data-service="backend" transform="translate(500, 150)">
              <path d="M0 -50 L43 -25 L43 25 L0 50 L-43 25 L-43 -25 Z" fill="url(#indigoGradHero)" opacity="0.85" filter="url(#glowService)" class="hex-shape"/>
              <text x="0" y="5" text-anchor="middle" fill="#F2F2F2" font-size="16" font-weight="bold" class="service-label">Backend</text>
            </g>
            
            <!-- Frontend (Top Right) -->
            <g class="service-hex" data-service="frontend" transform="translate(690, 290)">
              <path d="M0 -50 L43 -25 L43 25 L0 50 L-43 25 L-43 -25 Z" fill="url(#cyanGradHero)" opacity="0.75" filter="url(#glowService)" class="hex-shape"/>
              <text x="0" y="5" text-anchor="middle" fill="#F2F2F2" font-size="16" font-weight="bold" class="service-label">Frontend</text>
            </g>
            
            <!-- Automation (Bottom Right) -->
            <g class="service-hex" data-service="automation" transform="translate(690, 510)">
              <path d="M0 -50 L43 -25 L43 25 L0 50 L-43 25 L-43 -25 Z" fill="url(#indigoGradHero)" opacity="0.85" filter="url(#glowService)" class="hex-shape"/>
              <text x="0" y="-8" text-anchor="middle" fill="#F2F2F2" font-size="15" font-weight="bold" class="service-label">Auto</text>
              <text x="0" y="10" text-anchor="middle" fill="#F2F2F2" font-size="15" font-weight="bold" class="service-label">mation</text>
            </g>
            
            <!-- AI / Agents (Bottom) -->
            <g class="service-hex" data-service="ai" transform="translate(500, 650)">
              <path d="M0 -50 L43 -25 L43 25 L0 50 L-43 25 L-43 -25 Z" fill="url(#cyanGradHero)" opacity="0.75" filter="url(#glowService)" class="hex-shape"/>
              <text x="0" y="-5" text-anchor="middle" fill="#F2F2F2" font-size="16" font-weight="bold" class="service-label">AI /</text>
              <text x="0" y="14" text-anchor="middle" fill="#F2F2F2" font-size="16" font-weight="bold" class="service-label">Agents</text>
            </g>
            
            <!-- Migrations (Bottom Left) -->
            <g class="service-hex" data-service="migrations" transform="translate(310, 510)">
              <path d="M0 -50 L43 -25 L43 25 L0 50 L-43 25 L-43 -25 Z" fill="url(#indigoGradHero)" opacity="0.85" filter="url(#glowService)" class="hex-shape"/>
              <text x="0" y="-5" text-anchor="middle" fill="#F2F2F2" font-size="15" font-weight="bold" class="service-label">Migra</text>
              <text x="0" y="14" text-anchor="middle" fill="#F2F2F2" font-size="15" font-weight="bold" class="service-label">tions</text>
            </g>
            
            <!-- Ads (Top Left) -->
            <g class="service-hex" data-service="ads" transform="translate(310, 290)">
              <path d="M0 -50 L43 -25 L43 25 L0 50 L-43 25 L-43 -25 Z" fill="url(#cyanGradHero)" opacity="0.75" filter="url(#glowService)" class="hex-shape"/>
              <text x="0" y="5" text-anchor="middle" fill="#F2F2F2" font-size="16" font-weight="bold" class="service-label">Ads</text>
            </g>
            
            <!-- Central Logo -->
            <g transform="translate(500, 400)">
              <!-- Outer glow circle -->
              <circle cx="0" cy="0" r="85" fill="url(#mainGrad)" opacity="0.1" filter="url(#glowMain)"/>
              
              <!-- Main circle -->
              <circle cx="0" cy="0" r="60" fill="url(#mainGrad)" opacity="0.98" filter="url(#glowMain)" class="main-circle"/>
              <circle cx="0" cy="0" r="60" fill="none" stroke="#FFFFFF" stroke-width="2" opacity="0.5"/>
              
              <!-- Inner ring -->
              <circle cx="0" cy="0" r="68" fill="none" stroke="#5D5DFF" stroke-width="1.5" opacity="0.3"/>
            </g>
            
            <!-- Connection nodes (small circles at intersections) -->
            <circle cx="500" cy="180" r="5" fill="#5D5DFF" filter="url(#glowService)" class="node"/>
            <circle cx="690" cy="290" r="5" fill="#00FFC2" filter="url(#glowService)" class="node"/>
            <circle cx="690" cy="510" r="5" fill="#5D5DFF" filter="url(#glowService)" class="node"/>
            <circle cx="500" cy="620" r="5" fill="#00FFC2" filter="url(#glowService)" class="node"/>
            <circle cx="310" cy="510" r="5" fill="#5D5DFF" filter="url(#glowService)" class="node"/>
            <circle cx="310" cy="290" r="5" fill="#00FFC2" filter="url(#glowService)" class="node"/>
          </svg>
        </div>
        
        <!-- Decorative elements -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-brand-accent/10 rounded-full blur-3xl animate-pulse-slow" aria-hidden="true"></div>
        <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-brand-primary/10 rounded-full blur-3xl animate-pulse-slow" aria-hidden="true" style="animation-delay: 1s"></div>
      </div>
    </div>
  </div>

  <!-- Wave separator - optimized SVG -->
  <div class="absolute bottom-0 left-0 right-0" aria-hidden="true">
    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" class="w-full h-auto">
      <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0V120Z" fill="var(--color-surface)"/>
    </svg>
  </div>
</section>

<style>
  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse-slow {
    0%, 100% { opacity: 0.1; }
    50% { opacity: 0.2; }
  }
  
  @keyframes dash {
    to {
      stroke-dashoffset: -20;
    }
  }
  
  @keyframes pulse-glow {
    0%, 100% {
      opacity: 0.6;
      filter: drop-shadow(0 0 3px currentColor);
    }
    50% {
      opacity: 1;
      filter: drop-shadow(0 0 8px currentColor);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.6s ease-out backwards;
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }
  
  /* Hexagon Network Styles */
  .connection-line {
    animation: dash 3s linear infinite;
  }
  
  .service-hex {
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .service-hex:hover .hex-shape {
    opacity: 1 !important;
    transform: scale(1.15);
    filter: drop-shadow(0 0 12px currentColor);
  }
  
  .service-hex:hover .service-label {
    transform: scale(1.1);
  }
  
  .hex-shape {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .service-label {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }
  
  .main-circle {
    animation: pulse-glow 3s ease-in-out infinite;
  }
  
  .node {
    animation: pulse-glow 2s ease-in-out infinite;
  }
  
  .node:nth-child(odd) {
    animation-delay: 0.5s;
  }
  
  /* Add subtle rotation animation to the central logo */
  @keyframes rotate-slow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  #hexagon-network:hover .main-circle {
    animation: pulse-glow 1.5s ease-in-out infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in,
    .animate-fade-in-up,
    .animate-pulse-slow,
    .connection-line,
    .main-circle,
    .node {
      animation: none;
    }
    
    .service-hex:hover .hex-shape,
    .service-hex:hover .service-label {
      transform: none;
    }
  }
  
  /* Mobile optimizations for hexagon network */
  @media (max-width: 640px) {
    #hexagon-network {
      transform: scale(0.85);
      transform-origin: center;
    }
  }
  
  @media (min-width: 641px) and (max-width: 768px) {
    #hexagon-network {
      transform: scale(0.92);
      transform-origin: center;
    }
  }
</style>
