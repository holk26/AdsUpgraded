---
import Button from './ui/Button.astro';

export interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;
---

<section class="relative pt-32 pb-20 md:pt-40 md:pb-32 bg-gradient-to-br from-blue-50 via-white to-amber-50">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <div class="mb-6">
        <span class="inline-block px-4 py-2 bg-brand-primary/10 text-brand-primary rounded-full text-sm font-semibold mb-6">
          {t('hero.social')}
        </span>
      </div>
      
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-text-heading mb-6 leading-tight">
        {t('hero.title')}
      </h1>
      
      <p class="text-lg md:text-xl text-text-muted mb-10 max-w-3xl mx-auto">
        {t('hero.subtitle')}
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <Button variant="primary" size="lg" href="#demo">
          {t('hero.cta')}
        </Button>
        <Button variant="outline" size="lg" href="#how-it-works">
          {t('hero.demo')}
        </Button>
      </div>

      <div class="relative mx-auto max-w-5xl">
        <div class="relative rounded-xl overflow-hidden shadow-2xl border border-gray-200 bg-white p-4">
          <div class="aspect-video bg-gradient-to-br from-blue-100 to-indigo-100 rounded-lg flex items-center justify-center">
            <div class="text-center">
              <svg class="w-24 h-24 mx-auto mb-4 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              <p class="text-text-muted">Dashboard Preview</p>
            </div>
          </div>
        </div>
        
        <!-- Decorative elements -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-brand-accent/20 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-brand-primary/20 rounded-full blur-3xl"></div>
      </div>
    </div>
  </div>

  <!-- Wave separator -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0V120Z" fill="white"/>
    </svg>
  </div>
</section>
