---
export interface Props {
  class?: string;
  variant?: 'default' | 'glass' | 'border';
}

const { 
  class: className = '',
  variant = 'default',
} = Astro.props;

const variants = {
  default: 'bg-white border border-brand-border shadow-sm hover:shadow-md',
  glass: 'bg-white/90 backdrop-blur-sm border border-brand-border/50 shadow-sm hover:shadow-md',
  border: 'bg-bg-surface border-2 border-brand-primary shadow-sm hover:shadow-lg',
};

const classes = `rounded-lg p-4 md:p-6 transition-all duration-200 ${variants[variant]} ${className}`;
---

<div class={classes}>
  <slot />
</div>
