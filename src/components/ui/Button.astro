---
export interface Props {
  variant?: 'primary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
  ariaLabel?: string;
}

const { 
  variant = 'primary', 
  size = 'md', 
  href, 
  type = 'button',
  class: className = '',
  ariaLabel,
  ...props 
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center gap-2 font-semibold rounded-lg transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed w-full sm:w-auto';

const variants = {
  primary: 'bg-brand-secondary text-white hover:bg-emerald-600 active:bg-emerald-700 focus-visible:ring-brand-secondary shadow-sm hover:shadow-md',
  outline: 'border-2 border-brand-primary text-brand-primary hover:bg-brand-primary hover:text-white active:bg-slate-900 focus-visible:ring-brand-primary',
  ghost: 'text-text-body hover:bg-brand-surface/50 active:bg-brand-surface focus-visible:ring-brand-primary border border-brand-border',
};

const sizes = {
  sm: 'px-4 py-2 text-sm min-h-[2.5rem]',
  md: 'px-6 py-3 text-base min-h-[3rem]',
  lg: 'px-6 sm:px-8 py-3 sm:py-4 text-base sm:text-lg min-h-[3.5rem]',
};

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;

const Element = href ? 'a' : 'button';
---

<Element 
  class={classes}
  href={href}
  type={!href ? type : undefined}
  aria-label={ariaLabel}
  {...props}
>
  <slot />
</Element>
