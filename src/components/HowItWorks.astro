---
import SectionHeading from './ui/SectionHeading.astro';

export interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const steps = [
  {
    number: '01',
    titleKey: 'how.step1.title',
    descKey: 'how.step1.desc',
    icon: 'M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  },
  {
    number: '02',
    titleKey: 'how.step2.title',
    descKey: 'how.step2.desc',
    icon: 'M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01',
  },
  {
    number: '03',
    titleKey: 'how.step3.title',
    descKey: 'how.step3.desc',
    icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
  },
  {
    number: '04',
    titleKey: 'how.step4.title',
    descKey: 'how.step4.desc',
    icon: 'M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z',
  },
];
---

<section id="how-it-works" class="py-20 md:py-32 relative overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-color-surface-elevated/50 to-transparent"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(93,93,255,0.1),transparent_70%)]"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <SectionHeading 
      title={t('how.title')}
      subtitle={t('how.subtitle')}
      centered={true}
      class="mb-16"
    />

    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
        {steps.map((step, index) => (
          <div class="relative">
            <div class="gradient-border h-full">
              <div class="glass-effect rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 h-full border border-white/10 group hover:border-color-accent/50 hover:-translate-y-2 glow-effect">
                <div class="mb-6">
                  <span class="text-5xl font-bold text-gradient opacity-30 group-hover:opacity-50 transition-opacity">
                    {step.number}
                  </span>
                </div>
                
                <div class="mb-4">
                  <div class="w-14 h-14 bg-gradient-to-br from-color-accent/30 to-color-secondary/30 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-8 h-8 text-gradient" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={step.icon} />
                    </svg>
                  </div>
                </div>

                <h3 class="text-2xl font-bold text-text-heading mb-4">
                  {t(step.titleKey)}
                </h3>
                
                <p class="text-text-body leading-relaxed">
                  {t(step.descKey)}
                </p>
              </div>
            </div>

            {index < steps.length - 1 && index % 4 !== 3 && (
              <div class="hidden lg:block absolute top-1/2 -right-3 transform -translate-y-1/2 z-10" aria-hidden="true">
                <svg class="w-6 h-6 text-color-secondary opacity-40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
