---
import SectionHeading from './ui/SectionHeading.astro';

export interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const steps = [
  {
    number: '01',
    titleKey: 'how.step1.title',
    descKey: 'how.step1.desc',
    icon: 'M13 10V3L4 14h7v7l9-11h-7z',
  },
  {
    number: '02',
    titleKey: 'how.step2.title',
    descKey: 'how.step2.desc',
    icon: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15',
  },
  {
    number: '03',
    titleKey: 'how.step3.title',
    descKey: 'how.step3.desc',
    icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  },
];
---

<section id="how-it-works" class="py-20 md:py-32 bg-gradient-to-br from-blue-50 to-indigo-50">
  <div class="container mx-auto px-4">
    <SectionHeading 
      title={t('how.title')}
      subtitle={t('how.subtitle')}
      centered={true}
      class="mb-16"
    />

    <div class="max-w-5xl mx-auto">
      <div class="grid md:grid-cols-3 gap-8">
        {steps.map((step, index) => (
          <div class="relative">
            <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow h-full">
              <div class="mb-6">
                <span class="text-5xl font-bold text-brand-primary/20">{step.number}</span>
              </div>
              
              <div class="mb-4">
                <div class="w-14 h-14 bg-brand-primary/10 rounded-lg flex items-center justify-center">
                  <svg class="w-8 h-8 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={step.icon} />
                  </svg>
                </div>
              </div>

              <h3 class="text-2xl font-bold text-text-heading mb-4">
                {t(step.titleKey)}
              </h3>
              
              <p class="text-text-muted leading-relaxed">
                {t(step.descKey)}
              </p>
            </div>

            {index < steps.length - 1 && (
              <div class="hidden md:block absolute top-1/2 -right-4 transform -translate-y-1/2 z-10">
                <svg class="w-8 h-8 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
