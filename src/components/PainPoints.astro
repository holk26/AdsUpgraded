---
import Card from './ui/Card.astro';
import SectionHeading from './ui/SectionHeading.astro';

export interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const painPoints = [
  {
    icon: 'M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4',
    titleKey: 'pain.fragmented.title',
    descKey: 'pain.fragmented.desc',
  },
  {
    icon: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
    titleKey: 'pain.blind.title',
    descKey: 'pain.blind.desc',
  },
  {
    icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
    titleKey: 'pain.slow.title',
    descKey: 'pain.slow.desc',
  },
];
---

<section id="features" class="py-20 md:py-32 relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_80%_20%,rgba(93,93,255,0.08),transparent_50%)]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_80%,rgba(0,255,194,0.08),transparent_50%)]"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <SectionHeading 
      title={t('pain.title')}
      subtitle={t('pain.subtitle')}
      centered={true}
      class="mb-16"
    />

    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {painPoints.map((point) => (
        <div class="group relative">
          <div class="gradient-border h-full">
            <Card variant="glass" class="h-full hover:shadow-xl transition-all duration-300 hover:-translate-y-1 glow-effect">
              <div class="mb-4">
                <div class="w-14 h-14 bg-gradient-to-br from-color-accent/20 to-color-secondary/20 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-8 h-8 text-gradient" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={point.icon} />
                  </svg>
                </div>
              </div>
              <h3 class="text-xl font-bold text-text-heading mb-3">
                {t(point.titleKey)}
              </h3>
              <p class="text-text-body leading-relaxed">
                {t(point.descKey)}
              </p>
            </Card>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
