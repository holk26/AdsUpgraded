---
import Card from './ui/Card.astro';
import Button from './ui/Button.astro';
import SectionHeading from './ui/SectionHeading.astro';

export interface Props {
  t: (key: string) => string;
}

const { t } = Astro.props;

const plans = [
  {
    name: 'pricing.starter.name',
    price: 'pricing.starter.price',
    period: 'pricing.starter.period',
    desc: 'pricing.starter.desc',
    features: [
      'pricing.starter.feature1',
      'pricing.starter.feature2',
      'pricing.starter.feature3',
      'pricing.starter.feature4',
      'pricing.starter.feature5',
      'pricing.starter.feature6',
    ],
    cta: 'pricing.starter.cta',
    featured: false,
  },
  {
    name: 'pricing.frontend.name',
    price: 'pricing.frontend.price',
    period: 'pricing.frontend.period',
    desc: 'pricing.frontend.desc',
    features: [
      'pricing.frontend.feature1',
      'pricing.frontend.feature2',
      'pricing.frontend.feature3',
      'pricing.frontend.feature4',
      'pricing.frontend.feature5',
      'pricing.frontend.feature6',
    ],
    cta: 'pricing.frontend.cta',
    featured: false,
  },
  {
    name: 'pricing.growth.name',
    price: 'pricing.growth.price',
    period: 'pricing.growth.period',
    desc: 'pricing.growth.desc',
    features: [
      'pricing.growth.feature1',
      'pricing.growth.feature2',
      'pricing.growth.feature3',
      'pricing.growth.feature4',
      'pricing.growth.feature5',
      'pricing.growth.feature6',
    ],
    cta: 'pricing.growth.cta',
    featured: true,
  },
  {
    name: 'pricing.migrations.name',
    price: 'pricing.migrations.price',
    period: 'pricing.migrations.period',
    desc: 'pricing.migrations.desc',
    features: [
      'pricing.migrations.feature1',
      'pricing.migrations.feature2',
      'pricing.migrations.feature3',
      'pricing.migrations.feature4',
      'pricing.migrations.feature5',
      'pricing.migrations.feature6',
    ],
    cta: 'pricing.migrations.cta',
    featured: false,
  },
];
---

<section id="pricing" class="py-20 md:py-32 relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-color-surface-elevated/30 to-transparent"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_30%,rgba(93,93,255,0.1),transparent_50%)]"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <SectionHeading 
      title={t('pricing.title')}
      subtitle={t('pricing.subtitle')}
      centered={true}
      class="mb-16"
    />

    <div class="grid md:grid-cols-2 gap-6 md:gap-8 max-w-6xl mx-auto">
      {plans.map((plan) => {
        const isFeatured = plan.featured;
        // Position featured card with highlight
        const featuredClasses = isFeatured 
          ? 'md:col-span-2 glow-effect border-color-accent' 
          : 'hover:-translate-y-1';
        
        return (
          <Card 
            variant={isFeatured ? 'border' : 'default'} 
            class={`relative glass-effect hover:shadow-2xl transition-all duration-500 ${featuredClasses}`}
          >
          {isFeatured && (
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <span class="inline-block px-3 md:px-4 py-1 bg-gradient-to-r from-color-accent to-color-secondary text-white text-xs md:text-sm font-semibold rounded-full shadow-lg">
                Most Popular
              </span>
            </div>
          )}
          
          <div class="text-center mb-4 md:mb-6">
            <h3 class="text-xl md:text-2xl font-bold text-text-heading mb-2">
              {t(plan.name)}
            </h3>
            <p class="text-sm md:text-base text-text-body mb-4 md:mb-6">
              {t(plan.desc)}
            </p>
            <div class="flex items-baseline justify-center gap-1 md:gap-2 flex-wrap">
              <span class="text-3xl md:text-5xl font-bold text-text-heading">
                {t(plan.price)}
              </span>
              <span class="text-base md:text-xl text-text-muted">
                CAD{t(plan.period)}
              </span>
            </div>
          </div>

          <ul class="space-y-3 md:space-y-4 mb-6 md:mb-8" role="list">
            {plan.features.map((feature) => (
              <li class="flex items-start gap-2 md:gap-3">
                <svg class="w-5 h-5 md:w-6 md:h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm md:text-base text-text-body">{t(feature)}</span>
              </li>
            ))}
          </ul>

          <Button 
            variant={isFeatured ? 'primary' : 'outline'} 
            size="lg" 
            href="#demo"
            class="w-full"
            ariaLabel={`${t(plan.cta)} - ${t(plan.name)}`}
          >
            {t(plan.cta)}
          </Button>
        </Card>
        );
      })}
    </div>

    <div class="mt-12 text-center">
      <p class="text-text-body">
        {t('pricing.footer')}
      </p>
    </div>
  </div>
</section>
