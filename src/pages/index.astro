---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import BentoGrid from '../components/BentoGrid.astro';
import PainPoints from '../components/PainPoints.astro';
import HowItWorks from '../components/HowItWorks.astro';
import TrustSection from '../components/TrustSection.astro';
import Pricing from '../components/Pricing.astro';
import Footer from '../components/Footer.astro';
import { useTranslations } from '../i18n/ui';

const lang = 'en';
const t = useTranslations(lang);
---

<Layout 
  title="Nyxok - Engineering the Unseen"
  description="Robust, high-performance software architectures that automate complexity and empower businesses to scale with invisible precision. US B2B Tech Sector."
  lang={lang}
>
  <Header lang={lang} t={t} />
  <main id="main-content">
    <Hero t={t} />
    <BentoGrid t={t} />
    <PainPoints t={t} />
    <HowItWorks t={t} />
    <TrustSection t={t} />
    <Pricing t={t} />
  </main>
  <Footer t={t} />
</Layout>
