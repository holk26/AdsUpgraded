---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import BentoGrid from '../components/BentoGrid.astro';
import PainPoints from '../components/PainPoints.astro';
import HowItWorks from '../components/HowItWorks.astro';
import TrustSection from '../components/TrustSection.astro';
import Pricing from '../components/Pricing.astro';
import Footer from '../components/Footer.astro';
import { useTranslations } from '../i18n/ui';

const lang = 'en';
const t = useTranslations(lang);
---

<Layout 
  title="NYXOK - Digital Engineering Devshop | Web, Automation & AI"
  description="End-to-end digital engineering for startups and SMBs. We build scalable web apps, automate workflows, and integrate AI. Frontend, Backend, Automation & Social Media Tech."
  lang={lang}
>
  <Header lang={lang} t={t} />
  <main id="main-content">
    <Hero t={t} />
    <BentoGrid t={t} />
    <PainPoints t={t} />
    <HowItWorks t={t} />
    <TrustSection t={t} />
    <Pricing t={t} />
  </main>
  <Footer t={t} />
</Layout>
